# Voyagr PWA Environment Variables
# Copy this file to .env and fill in your values

# Routing Engines
GRAPHHOPPER_URL=http://localhost:8989
VALHALLA_URL=http://localhost:8002

# Routing Mode (set to 'true' to use OSRM instead of GraphHopper)
USE_OSRM=false

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false

# Database (Railway will use SQLite by default)
DATABASE_URL=sqlite:///voyagr_web.db

# Optional: For production, use PostgreSQL
# DATABASE_URL=postgresql://user:password@host:port/dbname

# API Keys (if needed for external services)
# GOOGLE_MAPS_API_KEY=your_key_here
# MAPBOX_API_KEY=your_key_here

