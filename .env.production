# ============================================================================
# VOYAGR PWA - PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================

# Environment
ENVIRONMENT=production
DEBUG=false

# Flask Configuration
PORT=5000
FLASK_ENV=production

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# HTTPS/SSL Configuration
ENFORCE_HTTPS=true
SSL_CERT_FILE=/path/to/cert.pem
SSL_KEY_FILE=/path/to/key.pem

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# PRODUCTION MONITORING
# ============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FILE=voyagr_production.log

# ============================================================================
# ALERTS AND NOTIFICATIONS
# ============================================================================

# Email Alerts
ALERT_EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=admin@example.com

# Webhook Alerts
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Slack Integration
ALERT_SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Integration
ALERT_DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=https://discordapp.com/api/webhooks/YOUR/WEBHOOK/URL

# Alert Thresholds
ALERT_RESPONSE_TIME_MS=5000
ALERT_ERROR_RATE_PERCENT=5
ALERT_CACHE_HIT_RATE_PERCENT=50
ALERT_ENGINE_FAILURE_RATE_PERCENT=30

# ============================================================================
# AUTOMATED BACKUPS
# ============================================================================

# Backup Configuration
BACKUP_INTERVAL_HOURS=24
BACKUP_DAILY_RETENTION=7
BACKUP_WEEKLY_RETENTION=4
BACKUP_MONTHLY_RETENTION=12

# S3 Cloud Storage (Optional)
BACKUP_S3_ENABLED=false
BACKUP_S3_BUCKET=your-bucket-name
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# ============================================================================
# ROUTING ENGINES
# ============================================================================

GRAPHHOPPER_URL=http://81.0.246.97:8989
VALHALLA_URL=http://141.147.102.102:8002
OSRM_URL=http://router.project-osrm.org

# ============================================================================
# DATABASE
# ============================================================================

DATABASE_PATH=voyagr_web.db
DATABASE_POOL_SIZE=5

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

CACHE_MAX_SIZE=1000
CACHE_TTL_SECONDS=3600

# ============================================================================
# NOTES
# ============================================================================

# 1. For Railway.app deployment:
#    - Set ENVIRONMENT=production
#    - Railway automatically sets PORT environment variable
#    - Use Railway's built-in SSL/TLS (ENFORCE_HTTPS=true)
#
# 2. For Email Alerts (Gmail):
#    - Enable 2-factor authentication
#    - Generate app-specific password
#    - Use app password in SMTP_PASSWORD
#
# 3. For S3 Backups:
#    - Create IAM user with S3 access
#    - Generate access key and secret key
#    - Create S3 bucket for backups
#
# 4. For Slack/Discord:
#    - Create incoming webhook in your workspace
#    - Copy webhook URL to configuration
#
# 5. Security Best Practices:
#    - Never commit this file to version control
#    - Use Railway.app secrets for sensitive values
#    - Rotate credentials regularly
#    - Enable HTTPS in production
#    - Monitor logs regularly

